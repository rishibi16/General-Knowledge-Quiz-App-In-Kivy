<WrappedLabel@Label>:
    size_hint_y: None
    height: self.texture_size[1] +(self.texture_size[1]/2)
    markup: True
    color:0, 255, 255, 1
    font_name: 'Satisfy.ttf'
    font_size: '20sp'

<KivyTutorRoot>:
    orientation: 'vertical'
    ActionBar:
        ActionView:
            ActionPrevious:
                title: ""
                with_previous: False
            ActionOverflow:
                ActionButton:
                    text: "Settings"
                    on_press: app.open_settings()
<HomeScreen>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos:self.pos
            size:self.size
    ScreenManager:
        Screen:
            FloatLayout:
                orientation: 'vertical'
                padding:25
                spacing:25
                canvas.before:
                    Color:
                        rgba: rgba('#0e1574ff')
                    Triangle:
                        #the size of the float layout  we are telling it to fill the size of the window dynamically.
                        points: [0,self.size[1],self.size[0],self.size[1],0,self.size[1]-(.4*self.size[1])]
                    Color:
                        rgba: rgba('#0e1574c8')
                    Triangle:
                        points: [0,self.size[1],self.size[0],self.size[1],self.size[0],self.size[1]-(.4*self.size[1])]
                Widget:
                    size_hint_y: .25
                WrappedLabel:
                    text: "[b]Are You Ready To Test Your Knowledge ?[/b]"
                    pos_hint: {"center_x": .5, "center_y": .6}
                    #the size of the float layout root.width, root.height we are telling it to fill the size of the window dynamically.
                    font_size: min(root.height, root.width)/20 #if height is 50 and it is divided by 10 then font size becomes 5
                    markup:True
                MDFillRoundFlatIconButton:
                    icon:"play-circle-outline"
                    size_hint: .5, None
                    pos_hint: {"center_x": .5, "center_y": .3}
                    border: (10, 10, 10, 10)
                    width: dp(350)
                    halign: 'center'
                    md_bg_color: 0, 0, 1, 1
                    text_color: 1,1,1,1
                    bold: True    
                    text:"PLAY NOW!"
                    on_release: root.manager.current = 'signin'
<Menu@Screen>:
    name:'other'
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos:self.pos
            size:self.size
    ScreenManager:
        Screen:
            name: 'scrn'
            BoxLayout:
                orientation: 'vertical'
                padding:25
                spacing:25
                canvas.before:
                    Color:
                        rgba: rgba('#00EDFF')
                    Triangle:
                        points: [0,self.size[1],self.size[0],self.size[1],0,self.size[1]-(.4*self.size[1])]
                    Color:
                        rgba: rgba('#00D8E8')
                    Triangle:
                        points: [0,self.size[1],self.size[0],self.size[1],self.size[0],self.size[1]-(.4*self.size[1])]
                Widget:
                    size_hint_y: .25
                WrappedLabel:
                    text: "[b]Quiz App[/b]"
                    font_size: min(root.height, root.width)/10 #if height is 50 the font size becomes 5
                    markup:True
                
                MDRectangleFlatButton:
                    border: (2, 2, 2, 2)
                    width: dp(300)
                    md_bg_color: 1,1,1,0
                    text_color: 0,0,1,1
                    color: 0,255,255,1
                    size_hint: .6, None
                    pos_hint:{'center_x':.5, 'center_y':.5}
                    bold: True
                    halign: 'center'
                    on_release: 
                        root.manager.current = 'game'
                        root.manager.transition.direction = "right"
                    text: 'START'
                MDRectangleFlatButton:
                    size_hint: .6, None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    border: (2, 2, 2, 2)
                    width: dp(300)
                    halign: 'center'
                    md_bg_color: 1,1,1,0
                    text_color: 0,0,1,1
                    color: 0,255,255,1
                    bold: True
                    on_release:root.manager.current='help'
                    text: "HELP"
                MDRectangleFlatButton:
                    border: (2, 2, 2, 2)
                    width: dp(300)
                    halign: 'center'
                    md_bg_color: 1,1,1,0
                    text_color: 0,0,1,1
                    size_hint: .6, None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release:root.manager.current='about'
                    text: "ABOUT"
                    color: 0,255,255,1
                    bold: True
                MDRectangleFlatButton:
                    border: (2, 2, 2, 2)
                    width: dp(300)
                    halign: 'center'
                    md_bg_color: 1,1,1,0
                    text_color: 0,0,1,1
                    size_hint: .6, None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    color: 0,255,255,1
                    bold: True
                    text:'UPDATE'
                    on_release:root.update_game()
                MDRectangleFlatButton:
                    border: (2, 2, 2, 2)
                    width: dp(300)
                    halign: 'center'
                    md_bg_color: 1,1,1,0
                    text_color: 0,0,1,1
                    size_hint: .6, None
                    pos_hint:{'center_x':.5, 'center_y':.5}
                    color: 0,255,255,1
                    bold: True
                    text:'QUIT'
                    on_release: exit()
        
<SigninWindow>:
    name:'signin'
    last_name_text_input: last_name
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos:self.pos
            size:self.size
    ScreenManager:
        id:scrn_mgr
        Screen:
            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: rgba('#0e1574ff')
                    Triangle:
                        points: [0,self.size[1],self.size[0],self.size[1],0,self.size[1]-(.4*self.size[1])]
                    Color:
                        rgba: rgba('#0e1574c8')
                    Triangle:
                        points: [0,self.size[1],self.size[0],self.size[1],self.size[0],self.size[1]-(.4*self.size[1])]
                Widget:
                    size_hint_y: .25
                Label:
                    font_size: mtx.sp('134')
                    markup:True
                    color: rgba('#0e1574ff')
                    size_hint_y: .3
                BoxLayout:
                    size_hint_y: .45
                    orientation: 'vertical'
                    padding: [mtx.dp(20), 0]
                    WrappedLabel:
                        font_name:"Alike-Regular.ttf"
                        text: "[b]USERNAME[/b]"
                        font_size: min(root.height, root.width)/10 #if height is 50 the font size becomes 5
                        markup:True
                    FlatInput:
                        id: last_name
                        hint_text: 'USERNAME'
                        bold:True
                        size_hint_y: .2
                    Widget:
                        size_hint_y: .3
                    FlatButton:
                        text: 'Next'
                        size_hint_y: .2
                        on_release:
                            root.submit_surname()
                            #root.manager.current = "game"
                            root.manager.transition.direction = "right"
                            app.root.get_screen('game').current_mode = 2
                            #if button released then it calls the function
                        canvas.before:
                            Color:
                                rgba: rgba('#0e1574ff')
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [30]
<FlatButton@Button>:
